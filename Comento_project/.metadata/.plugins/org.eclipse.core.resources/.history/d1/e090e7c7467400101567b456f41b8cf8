#include "main.h"
#include "usart.h"

/* 전역 상태 변수 정의(헤더에는 extern만 존재) */
volatile State_t g_state = IDLE;
static uint8_t g_rx;

#define LED_IDLE_MS 500
#define LED_RUN_MS  100
#define LED_ERR_MS   25

/* UART 수신 콜백 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
    if (huart->Instance == USART1)
    {
        HAL_UART_Transmit(&huart1, &g_rx, 1, HAL_MAX_DELAY);  // Echo

        if      (g_rx == 'i') g_state = IDLE;
        else if (g_rx == 's') g_state = RUN;
        else if (g_rx == 'e') g_state = ERR;

        HAL_UART_Receive_IT(&huart1, &g_rx, 1);               // re-arm
    }
}

int main(void)
{
    HAL_Init();
    SystemClock_Config();
    MX_GPIO_Init();
    MX_USART1_UART_Init();

    /* 부팅 메시지 */
    const char* boot = "BOOT\r\n";
    HAL_UART_Transmit(&huart1, (uint8_t*)boot, 6, HAL_MAX_DELAY);

    HAL_UART_Receive_IT(&huart1, &g_rx, 1);

    while (1)
    {
        switch (g_state)
        {
            case IDLE:
                HAL_GPIO_WritePin(LED_GPIO_Port, LED_Pin, GPIO_PIN_RESET);
                HAL_Delay(LED_IDLE_MS);
                break;

            case RUN:
                HAL_GPIO_TogglePin(LED_GPIO_Port, LED_Pin);
                HAL_Delay(LED_RUN_MS);
                break;

            case ERR:
                HAL_GPIO_TogglePin(LED_GPIO_Port, LED_Pin);
                HAL_Delay(LED_ERR_MS);
                break;
        }
    }
}

/* SystemClock_Config(), Error_Handler()는 기존 정의 유지 */
