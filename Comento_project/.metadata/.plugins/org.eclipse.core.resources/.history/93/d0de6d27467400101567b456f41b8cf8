#ifndef __MAIN_H
#define __MAIN_H
#ifdef __cplusplus
extern "C" { #endif

#include "stm32f1xx_hal.h"
#include "gpio.h"
#include "usart.h"

/* 상태 타입: 여기서만 정의 */
typedef enum { IDLE = 0, RUN, ERR } State_t;

/* 전역 상태 변수: 여기서는 extern 선언만 */
extern volatile State_t g_state;

void SystemClock_Config(void);
void Error_Handler(void);

#ifdef __cplusplus
}
#endif
#endif
